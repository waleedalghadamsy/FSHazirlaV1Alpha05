<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GeneralWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/menustyle.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">GeneralWebApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <ul id="nav">
            <li>
                <a>Kuponlar</a>
                <ul>
                    <li><a asp-page="/Kuponlar/Index">Liste</a></li>
                    <li><a asp-page="/Kuponlar/YeniEkle">Yeni Ekle</a></li>
                    <li><a asp-page="/Kuponlar/Raporlar">Raporlar</a></li>
                </ul>
            </li>
            <li>
                <a>Siparişler</a>
                <ul>
                    <li><a asp-page="/Siparişler/Index">Liste</a></li>
                    <li><a asp-page="/Siparişler/MüşteriYeniSiparişler">Müşteri Yeni Siparişler</a></li>
                    <li><a asp-page="/Siparişler/Raporlar">Raporlar</a></li>
                </ul>
            </li>
            <li>
                <a>Kullanıcılar</a>
                <ul>
                    <li class="active"><a asp-page="/SistemGüvenlik/Index">Liste</a></li>
                    <li><a asp-page="/SistemGüvenlik/YeniKullanıcı">Yeni Ekle</a></li>
                    <li><a asp-page="/SistemGüvenlik/KullanıcıDeğiştir">Değiştir</a></li>
                    <li><a asp-page="/SistemGüvenlik/KullanıcıKaldır">Kaldır</a></li>
                    <li><a asp-page="/SistemGüvenlik/YeniŞifre">Yeni Şifre</a></li>
                    <li><a asp-page="/SistemGüvenlik/Raporlar">Raporlar</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - GeneralWebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
