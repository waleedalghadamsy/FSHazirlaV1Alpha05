@page
@model HazırlaWebArkaUç.Pages.SistemGüvenlik.GirişModel
@{
    Layout = "_GirişLayout";
    ViewData["Title"] = "Giriş -- Hazırla Arka Uç Yönetim";
}
    <div style="text-align:center">
        <h5>Hazırla Arka Uç Yönetim</h5>
    </div>
    <div class="login-box">
        <div class="login-box-body">
            <p class="login-box-msg"><label style="font-weight:bold">Sistem Giriş</label></p>
            <form id="girişForm" role="form" method="post">
                <div class="form-group">
                    <label>Giriş İsim</label>
                    <input type="text" asp-for="Girişİsim" class="form-control" placeholder="Yazınız ...">
                    <span asp-validation-for="Girişİsim"></span>
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="password" id="şifreMetin" asp-for="Şifre" class="form-control" placeholder="Yazınız ...">
                    <span asp-validation-for="Şifre"></span>
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-xs-3">
                            <button id="girişBtn" type="submit" class="btn btn-primary">Giriş</button>
                        </div>
                        <div class="col-md-3">
                            <i class="fa fa-refresh fa-spin"></i>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

<script src="~/lib/jquery/core.js"></script>
<script src="~/lib/jquery/jquery.js"></script>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            try {
                $(".fa-spin").hide();
            } catch (e) {

            }
        });
        function doğrula() {
            try {
                //alert("Here -- '" + $("#şifreMetin").val() + "' | '" + $("#şifreOnayı").val() + "'");

                var şfr = $("#şifreMetin").val();
                var şfrOny = $("#şifreOnayı").val();
                if (şfr != şfrOny) {
                    //alert("Passwords do not match.");

                    $("#doğrulamakSonuç").text("Yanlış");

                    return false;
                }

                return true;
            } catch (e) {

            }
        };

        $("#girişForm").submit(function () {
            //alert("Handler for .submit() called.");

            $("#girişBtn").attr("disabled", "disabled");
            $(".fa-spin").show();
            //event.preventDefault();
        });
    </script>
}
